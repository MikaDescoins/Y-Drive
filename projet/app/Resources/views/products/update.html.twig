
{%  include('default/menu.html.twig') %}


<form action="{{ path('ydrive_product_update_submit', {'id': product.id}) }}" id='form_validation' method="POST">

    <label>Id du produit : </label>
    <input type="text" name="productId" id="productId" value="{{ product.productId }}"/>
    <br><br>

    <label>Name du produit : </label>
    <input type="text" name="productName" id="productName" value="{{ product.productName }}"/>
    <br><br>


    <label>Prix du produit  :  </label>
    <input type="text" name="retailPrice" id="retailPrice" value="{{ product.price }}"/>
    <br><br>

    <label>Stock du produit  :  </label>
    <input type="text" name="stock" id="stock" value="{{ product.stock }}" />
    <br><br>

    <label>Description du produit  :  </label>
    <input type="text" name="description" id="description" value="{{ product.description }}" />
    <br><br>

    <input type="submit" value="Envoyer"/>
</form>
